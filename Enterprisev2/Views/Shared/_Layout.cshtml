<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Enterprisev2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            background: rgb(226 232 240);
        }
    </style>
</head>
<body>
    <header>        
        <nav class="navbar" id="navbar">
            <div class="nav-left">
                <a asp-area="" asp-controller="Home">
                    <img src="~/images/logo-bear.png" class="logo" />
                </a>                
                <div class="search-box">
                    <img src="~/images/search-1.png" />
                    <input type="text" placeholder="Search..." />
                </div>
            </div>
            <div class="nav-right ">
                <ul>
                    <li><img src="~/images/notification.png" /></li>
                    <li><img src="~/images/inbox.png" /></li>
                    <li><img src="~/images/video.png" /></li>
                </ul>
                
                @*<div class="nav-user-icon online ">
                    <img src="~/images/profile-pic.png" />
                </div>*@
                <partial name="_Identity" />
            </div>
        </nav>
    </header>        
    <div class="container">
        <main role="main" class="pb-10">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Enterprisev2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
